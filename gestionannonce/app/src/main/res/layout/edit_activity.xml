<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!--Edit text to enter Ad name-->
    <EditText
        android:id="@+id/idEdtAdName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Ad Name" />

    <!--edit text to enter aD duration-->
    <EditText
        android:id="@+id/idEdtAdDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Ad Duration" />

    <!--edit text to display Ad tracks-->
    <EditText
        android:id="@+id/idEdtAdTracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Ad Tracks" />

    <!--edit text for Ad description-->
    <EditText
        android:id="@+id/idEdtAdDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter Ad Description" />

    <!--button for adding new Ad-->
    <Button
        android:id="@+id/idBtnAddAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Ajouter l'Annonce"
        android:textAllCaps="false" />

</LinearLayout>